=render :partial => 'replies/vote', :locals => {:question => @question, :voteable => comment, :type => "comment"}

= comment.body
%blockquote
  %footer
    = comment.user.full_name + " " + comment.created_at.to_formatted_s(:short)
    
    .pull-right
      -if current_user.id == comment.user.id
        = link_to "Delete comment", answer_comment_path(answer,comment,:question_id => @question.id), :method => :delete, :data => { :confirm => 'Are you sure?' }


