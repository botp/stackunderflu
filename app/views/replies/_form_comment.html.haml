%p
  = form_for comment, :url => answer_comments_path(question,answer) do |f|
    .field
      = f.text_area :body, :required => true

    .field
      / = f.label :user_id
      = f.hidden_field :user_id, :value => "#{current_user.id}"
    .actions
      = f.submit 'Submit Comment', :class => "btn btn-primary"
