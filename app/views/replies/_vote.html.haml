-vote = Vote.get_vote(@question,current_user.id)


=link_to  question_votes_path(@question,@answer,:vote_count => 1, :user_id => current_user.id ), :method => :post, :class =>'btn btn-primary' do
  %span.glyphicon.glyphicon-chevron-up

%span.btn
  =@question.total_votes

- if vote
  =link_to  question_vote_path(@question,vote), :method => :delete, :class =>'btn btn-danger' do
    %span.glyphicon.glyphicon-chevron-down

- else
  =link_to  question_votes_path(@question,@answer,:vote_count => -1, :user_id => current_user.id), :method => :post, :class =>'btn btn-danger' do
    %span.glyphicon.glyphicon-chevron-down


