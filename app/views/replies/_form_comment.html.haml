%p
  = form_for Reply.new, :remote => true, :url => answer_comments_path(answer) do |f|
    .field
      = f.text_area :body, :required => true, :id => 'comment_body'

    .field
      / = f.label :user_id
      = f.hidden_field :user_id, :value => "#{current_user.id}"
    .actions
      = f.submit 'Submit Comment', :class => "btn btn-primary"
