.col-md-10.col-md-offset-1
  %blockquote
    %h1
      =@question.title
    %br/
    %p
      =simple_format(@question.body)
    %footer
      %p
        Posted by:
        %strong
        =@question.user.full_name
      %p
        Posted on:
        =@question.created_at.to_formatted_s(:short) 
  
  %hr{:style => 'border: 2px solid grey'}

  %h2
    -count = @question.answers.count
    #{count} 

    -if count > 1
      Answers
    -else
      Answer

  %hr{:style => 'border: 2px solid grey'}


  - @answers.each do |answer|
    %blockquote
      %h3
        = answer.body
      %footer.pull-right
        = answer.user.full_name

      %blockquote
        - answer.comments.each do |comment|
          = comment.body
          %blockquote
            %footer
              = comment.user.full_name

      =render :partial => 'replies/form_comment', :locals => {:question => @question,:answer => answer, :comment => @comment}

  / #div_answers
  /   =render :collection => @answers, :locals =>{:comment => @comment, :question => @question}, :partial => 'answers/answer'
  %h5
    %b Add an answer:

    =render :partial => 'replies/form'


  =link_to 'Back to Questions', questions_path, :class=> 'btn btn-default'

  / = link_to 'Edit', edit_question_path(@question)
  / \|
  / = link_to 'Back', questions_path
