-vote = User.already_voted?(@question,current_user.id)

-if vote == nil
  =link_to  question_votes_path(@question,@answer,:vote_value => 1, :user_id => current_user.id, :voteable_type => 'Question' ), :method => :post, :class =>'btn btn-primary' do
    %span.glyphicon.glyphicon-chevron-up

-elsif @question.users_existing_vote(current_user) == 1
  =link_to  question_votes_path(@question.id), :method => :post, :class =>'btn btn-primary', :disabled => :disabled do
    %span.glyphicon.glyphicon-chevron-up

-else
  =link_to  question_vote_path(@question,vote), :method => :delete, :class =>'btn btn-primary' do
    %span.glyphicon.glyphicon-chevron-up

